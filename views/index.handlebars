

<h1>Time To Eat-Da-Burger!</h1>





<main>
  <div class="container">
    <div class="row">
      <div class="col s6">
        <h4>Burgers available to Eat!</h4>
        <p>Click the burger to eat it!</p>
        {{#each burgers}}
          {{#unless this.devoured}}
            <div>
              <form action="burgers/{{id}}" method="POST">
                <button type="submit" id="{{this.id}}" burger_name="{{this.burger_name}}" class='burgerAvailable' devoured='false'> {{this.burger_name}}</button>
              </form>
            </div>
          {{/unless}}
        {{/each}}
      </div>



      <div class="col s6">
        <h4>Burgers that have been Eaten!</h4>
        <p>Click the eaten burger to throw away!</p>
        {{#each burgers}}
          {{#if this.devoured}}
            <div class='burgerEaten'>
              <div>
                <form action="burgers/delete/{{id}}" method="POST">
                <button type="delete" id="{{this.id}}" burger_name="{{this.burger_name}}"class='burgerDevoured' devoured='true'> {{this.burger_name}}</button>
              </form>
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</main>

<h2>Add A Burger</h2>

<div class="row">
  <div class="col s12">
    <form action="/burgers" method ="POST">
      <input type="text" id ="name" devoured="false", name="burger_name" placeholder="What type of Burger?">
      <button type="submit"id="submit">Add Your Burger</button>
    </form>
  </div>
</div>